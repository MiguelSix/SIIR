@{
    ViewData["Title"] = "Restaurar Contraseña";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .restore-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .btn-primary {
        background-color: #1a3c6e;
        border-color: #1a3c6e;
    }

    .btn-primary:hover {
        background-color: #15305a;
        border-color: #15305a;
    }

    .form-control:focus {
        border-color: #1a3c6e;
        box-shadow: 0 0 0 0.2rem rgba(26,60,110,.25);
    }

    .nav-link {
        color: #1a3c6e;
        text-decoration: none;
    }

    .nav-link:hover {
        text-decoration: underline;
    }
</style>

<div class="container">
    <h2 class="text-center mt-5">Restaurar Contraseña</h2>
    <div class="restore-password-container">
        <form asp-controller="Account" asp-action="RestorePassword" method="post">
            <div class="mb-3">
                <label for="numeroControl" class="form-label">Número de Control</label>
                <input type="text" class="form-control" id="numeroControl" name="numeroControl" placeholder="Ingresa tu Número de Control" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Ingresa tu Correo Electrónico" required>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Restaurar Contraseña</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Volver al inicio de sesión</a>
        </div>
    </div>
</div>
